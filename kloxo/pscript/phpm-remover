#!/bin/sh

if [ "$1" == "--help" ] ; then
	echo
	echo " ------------------------------------------------------------------------------"
	echo "  format: sh $0 <phpXYm|phpXYs>"
	echo " ------------------------------------------------------------------------------"
	echo "  phpXYm/phpXYs"
	echo "      - start from php52m/php52s"
	echo "      - phpXYm for 'multiple php'"
	echo "      - phpXYs for 'special php' for KloxoNG panel"
	echo
	exit;
fi

if [ "$#" == 0 ] ; then
	echo
	echo "- For help, type '$0 --help'"
	echo
	exit
fi

base_name="${1}"

## MR -- remove last char (default m or s)
src_name="${base_name%[s,m]}"

main_path="/opt/remi/${src_name}"

. /script/counter-start.inc



if [ "$(grep 's' <<<${base_name})" == "" ] && [ "$(grep 'm' <<<${base_name})" == "" ] ; then
	echo "* WARNING: only for phpXYm or phpXYs (change XY from 52)"
else
	echo "- Remove ${src_name}-fpm service"

	stype=$(ps --no-headers -o comm 1)

	if [ -f ${main_path}/usr/sbin/php-fpm ] ; then
		service ${src_name}-fpm stop
		'rm' -rf ${main_path} >/dev/null 2>&1
		chkconfig ${src_name}-fpm off >/dev/null 2>&1
		chkconfig --del ${src_name}-fpm >/dev/null 2>&1
		if [ "${stype}" == "systemd" ] ; then
			'rm' -f /usr/lib/systemd/system/${src_name}-fpm.service >/dev/null 2>&1
			systemctl daemon-reload >/dev/null 2>&1
		else
			'rm' -f /etc/rc.d/init.d/${src_name}-fpm >/dev/null 2>&1
		fi
	fi
fi

. /script/counter-end.inc
